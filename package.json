{
  "name": "llm-assistant-macos",
  "version": "0.3.0",
  "description": "AI-powered assistant for macOS with native system integration and Mail.app support",
  "main": "src/main/main.js",
  "homepage": "https://github.com/obodnikov/llm-assistant-macos",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build-native && electron-builder",
    "build-native": "node-gyp rebuild --target=28.3.3 --arch=arm64 --dist-url=https://electronjs.org/headers",
    "clean-native": "node-gyp clean",
    "install-native": "npm install && npm run build-native",
    "setup-wizard": "node scripts/setup-wizard.js",
    "test": "jest",
    "test-native": "node scripts/test-native-modules.js",
    "clean": "rm -rf node_modules package-lock.json build/ && npm install",
    "rebuild": "npm run clean-native && npm run build-native",
    "check-permissions": "node scripts/check-permissions.js",
    "postinstall": "npm run build-native || echo '⚠️  Native modules build failed - app will use fallbacks'"
  },
  "keywords": [
    "electron",
    "macos",
    "ai",
    "assistant",
    "mail",
    "openai",
    "native-modules",
    "accessibility",
    "text-selection",
    "context-menu"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "node-gyp": "^10.0.1",
    "nan": "^2.17.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "openai": "^4.24.7",
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.obodnikov.llm-assistant",
    "productName": "LLM Assistant",
    "icon": "assets/icons/icon.icns",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "native-modules/**/*",
      "build/Release/*.node",
      "!build/Release/obj.target",
      "!build/Release/.deps",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "build/Release",
        "to": "Resources/app.asar.unpacked/build/Release",
        "filter": ["*.node"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "darkModeSupport": true,
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSAccessibilityUsageDescription": "LLM Assistant needs accessibility access to provide system-wide text assistance and context menus."
      }
    },
    "dmg": {
      "title": "LLM Assistant Installer",
      "icon": "assets/icons/icon.icns"
    }
  },
  "gypfile": true
}