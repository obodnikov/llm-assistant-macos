{
  "name": "llm-assistant-macos",
  "version": "0.1.0",
  "description": "AI-powered assistant for macOS with Mail.app integration",
  "main": "src/main/main.js",
  "homepage": "https://github.com/yourusername/llm-assistant-macos",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-native": "node-gyp rebuild",
    "setup-wizard": "node scripts/setup-wizard.js",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "macos",
    "ai",
    "assistant",
    "mail",
    "openai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "node-gyp": "^10.0.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "openai": "^4.20.1",
    "electron-store": "^8.1.0",
    "node-applescript": "^5.0.0",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.yourname.llm-assistant",
    "productName": "LLM Assistant",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "darkModeSupport": true
    },
    "dmg": {
      "title": "LLM Assistant Installer"
    }
  }
}